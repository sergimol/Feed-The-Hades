<Page
    x:Class="Feed_The_Hades.PagPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Feed_The_Hades"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>



        <ItemsPanelTemplate x:Key="ImageGridView_ItemsPanelTemplate">
            <ItemsWrapGrid Orientation="Horizontal"
                           HorizontalAlignment="Center" />
        </ItemsPanelTemplate>
    </Page.Resources>
    <Grid Background="Black" Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="628" />
            <ColumnDefinition Width="*" MinWidth="442" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="58"/>
            <RowDefinition Height="620"/>
            <RowDefinition Height="1*" MinHeight="241"/>
            <RowDefinition Height="100"/>

        </Grid.RowDefinitions>
        <Rectangle Fill="Purple" Grid.Column="0" Grid.RowSpan="2" />
        <Rectangle Fill="LightPink" Grid.RowSpan="2" Grid.Column="1"  />
        <!--DIOSES GRIEGOS-->
        <ScrollViewer Grid.Row="2" Grid.ColumnSpan="2">
            <GridView   Background="#FFDEB4CB"  >
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
                <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="20, 20,20,20"/>
            </GridView>
        </ScrollViewer>
        <!--BARRA DE MUERTES-->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Background="Red" Orientation="Vertical">
            <TextBlock Text="MUERTES TOTALES" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Text="3949/7000000" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>
        <!--AJUSTES DE CONFIG Y EXIT-->
        <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Vertical">
            <AppBarButton Icon="Setting" HorizontalAlignment="Right" VerticalAlignment="Bottom"  BorderBrush="#FF740B0B" BorderThickness="5" Height="auto" Background="#66360505"/>
            <AppBarButton Icon="Setting" HorizontalAlignment="Right" VerticalAlignment="Bottom"  BorderBrush="#FF740B0B" BorderThickness="5" Height="auto" Background="#66360505"/>
        </StackPanel>
        
        
        <Rectangle Fill="Green
                   " Grid.RowSpan="3" Grid.Column="2"  />

        <TextBlock HorizontalAlignment="Center" Text="EL HADES" TextWrapping="Wrap" VerticalAlignment="Center" Height="51" Width="409" Grid.Row="0" Grid.Column="0" TextAlignment="Center" Foreground="White"  />
        <TextBlock HorizontalAlignment="Center" Text="TIENDA" TextWrapping="Wrap" VerticalAlignment="Center" Height="51" Width="409" Grid.Row="0" Grid.Column="1" TextAlignment="Center" Foreground="White"/>
        <TextBlock HorizontalAlignment="Center" Text="LA TIERRA" TextWrapping="Wrap" VerticalAlignment="Center" Height="51" Width="409" Grid.Row="0" Grid.Column="2" TextAlignment="Center" Foreground="White"/>


    </Grid>
</Page>
